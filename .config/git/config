[include]
  path = ~/.config/git/local_config

[init]
  defaultBranch = main

[core]
  editor = nvim
  excludesfile = ~/.config/git/global_ignore
  pager = delta

[fetch]
  prune = true

[pull]
  rebase = true

[alias]
  a = add
  d = diff
  ds = diff --staged
  dl = diff .
  p = pull
  pr = pull --rebase
  ps = push
  s = status
  sl = status .
  cp = cherry-pick
  co = checkout
  cb = checkout -b
  cl = clone
  c = commit
  ca = commit --amend
  cm = commit -m
  cam = commit --amend -m
  b = branch
  unstage = reset HEAD --
  # Pretty log graph for a project
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
  lb = "!f(){ local currentbranch=$(git rev-parse --abbrev-ref HEAD); git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative \"${1:-$currentbranch}\"; };f"
  squash = "!f(){ git reset --soft HEAD~${1} && git commit --edit -m\"$(git log --format=%B --reverse HEAD..HEAD@{1})\"; };f"
  st = stash
  ssd = "!git stash && git stash drop"
  s1 = squash 1
  ri = rebase -i
  # v is for 'vim' since that's the diff tool I use (modulo lvim/nvim)
  vd = difftool
  vs = difftool --staged
  rb = "!git rebase -i $(git merge-base HEAD develop)"

[interactive]
  diffFilter = delta --color-only

[status]
  showUntrackedFiles = all

[ui]
  color = auto

[color "branch"]
  current = green
  local = yellow
  remote = red

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = green
  changed = yellow
  untracked = red

[delta]
  line-numbers = true
  features = line-numbers decorations
  syntax-theme = Dracula
  plus-style = syntax "#002300"
  plus-emph-style = syntax "#005600"
  minus-style = syntax "#3f0001"
  side-by-side = true

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
  hunk-header-decoration-style = cyan box ul

[delta "line-numbers"]
  line-numbers-left-style = cyan
  line-numbers-right-style = cyan
  line-numbers-minus-style = bold 124
  line-numbers-plus-style = bold 28

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
